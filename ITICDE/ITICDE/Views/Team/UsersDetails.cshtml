@using System.Security.Claims
@model IEnumerable<ITICDE.Models.User>

@{
    ViewData["Title"] = "UsersDetails";
    var TeamId = ViewBag.TeamId;
    var TeamLeader=(string)ViewBag.TeamLeader;
    var user = User.FindFirstValue(ClaimTypes.NameIdentifier);
}


<h1>Team Details</h1>
<p style="display:flex; justify-content:flex-end">
    <a class="btn btn-primary" asp-controller="User" asp-action="AddTeamUser" asp-route-TeamId="@TeamId" style="margin:5px;">Add User</a>
</p>

<div class="table-responsive">
    <table class="table" style="text-align:center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
@*                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.OrganizationType)
                </th>
				<th>
                    @Html.DisplayNameFor(model => model.Discipline)
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Id == TeamLeader)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrganizationType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discipline)
                        </td>
                        @if (item.Id == TeamLeader)
                        {
                            <td>Team Leader</td>
                        }
                        <td>
                            @if(user == TeamLeader)
                            {
                            <a  asp-controller="User" asp-action="DeleteTeamUser" asp-route-UserId="@item.Id"
                        asp-route-TeamId="@TeamId" class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i> Delete</a>
                            }
                        </td>
                    </tr>

                }
            
        }
        @foreach (var item in Model)
            {
                if(item.Id != TeamLeader)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrganizationType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discipline)
                        </td>
                        @if (item.Id != TeamLeader)
                        {
                            <td>Team Member</td>
                        }
                    <td>
                        @if(user == TeamLeader)
                            {
                            <a  asp-controller="User" asp-action="DeleteTeamUser" asp-route-UserId="@item.Id"
                        asp-route-TeamId="@TeamId" class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i> Delete</a>
                            }
                        
                    </td>
                </tr>
                }
            }
        </tbody>
        
    </table>
    <div class="form-group">
				<a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
</div>

