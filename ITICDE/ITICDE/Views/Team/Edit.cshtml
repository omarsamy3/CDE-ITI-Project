@model ITICDE.Models.Team

@{
    ViewData["Title"] = "Edit";
    var CreatorUserId = Model.CreatorUserId;
    var TeamLeaderId = Model.TeamLeaderId;
    var ProjectId = ViewBag.ProjectId;
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeamLeaderId" class="control-label"></label>
                <select asp-for="TeamLeaderId" class ="form-control" asp-items="ViewBag.TeamLeaderId"></select>
            </div>
            <div class="form-group">
				<a asp-action="Index" asp-route-ProjectId="@ProjectId" class="btn btn-outline-secondary"><i class="fa-solid fa-circle-left"></i>&nbsp;Back to List</a>
                <input type="submit" value="Save" asp-route-ProjectId="@ProjectId" asp-route-TeamLeaderId="@TeamLeaderId" asp-route-CreatorUserId="@CreatorUserId" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
