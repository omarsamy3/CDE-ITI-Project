@using System.Security.Claims

@{
    ViewData["Title"] = "CreateInnerFolder";
    var user = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var parId = (int)ViewBag.parent;
    var ProjId = HttpContextAccessor.HttpContext.Session.GetInt32("projid");
}


@model ITICDE.Models.Folder
<h1>Create New Folder </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Folders" asp-action="CreateInnerFolder" asp>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
         @*   <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                
                <input asp-for="Id" hidden class="form-control" />
                
            </div>
            <div class="form-group">
                <input type="submit" asp-route-UserId="@user" value="Create" class="btn btn-primary" />
                <a asp-action="InnerDet" asp-route-id="@parId" asp-route-projectId="@ProjId" class="btn btn-outline-secondary">Back to List</a>
				
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
