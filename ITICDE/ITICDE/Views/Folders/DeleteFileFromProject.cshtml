@model ITICDE.Models.File
@{
    ViewData["Title"] = "DeleteFileFromProject";
    var name = Model.Name.Split('@').First() + Model.Type;
}
<h1>Delete</h1>

<h3 style="color:red">Are you sure you want to delete this File?</h3>
<div>
    <h4>@Model.Name.Split('@').First()@Model.Type</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
    </dl>
    
    <form asp-action="DeleteFile">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" asp-route-ProjectId="@Model.ProjectId"/> |
        <a asp-action="Index" asp-route-ProjectId="@Model.ProjectId" class="btn btn-outline-secondary"> <i class="fa-solid fa-circle-left"></i> &nbsp;Back to List</a>
    </form>
</div>
