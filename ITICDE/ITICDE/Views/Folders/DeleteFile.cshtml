@model ITICDE.Models.File

@{
    ViewData["Title"] = "Delete";
    var name = Model.Name.Split(";").First() + Model.Type;
}

<h1>Delete File</h1>

<h3 style="color:red;">Are you sure you want to delete this File?</h3>
<h3>@name</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UploadDate)
        </dd>
    </dl>
    
    <form asp-action="DeleteFile">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
      
        
        <a asp-action="InnerDet"class="btn btn-outline-secondary" asp-route-Id="@Model.FolderId"><i class="fa-solid fa-circle-left"></i> &nbsp;Back to List</a>
        
    </form>
</div>
