@model ITICDE.Models.Folder

@{
    ViewData["Title"] = "Delete";
    var project = (int)ViewBag.projectId;
}


<h3 style="color:red;">Are you sure you want to delete this folder @Model.Name ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

            <input type="submit" value="Delete" asp-route-ProjectId="@project" class="btn btn-danger" />
      @if (Model.ParentId == 0)
                {
            <a asp-action="Index" asp-route-ProjectId="@project" class="btn btn-outline-secondary"> <i class="fa-solid fa-circle-left"></i> &nbsp;Back to List</a>
        }
        else
        {
             <a asp-action="InnerDet" asp-route-id="@Model.ParentId" asp-route-projectId="@Model.Project" class="btn btn-outline-secondary"> <i class="fa-solid fa-circle-left"></i> &nbsp;Back to List</a>
        }

        
    </form>
</div>
