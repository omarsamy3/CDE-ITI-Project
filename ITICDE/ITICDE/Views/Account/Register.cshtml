@{
    Layout = "";
}

@model UserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bay Bridge | Registeration Page </title>
  <link rel="shortcut icon" href="/dist/img/logo 128x128.ico" />
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">
<div class="register-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a asp-action="Index" asp-controller="Home" class="h1"><b>Bay Bridge</b></a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Register a new membership</p>

      <form asp-controller="Account" asp-action="Register" method="post" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- validation summary -->
        <div class="input-group mb-3">
          <input required asp-for="Name" class="form-control" placeholder="Full name">
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="Name" class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input required asp-for="Email" class="form-control" placeholder="Email">
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="Email" class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input required asp-for="Password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="Password" class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input required asp-for="Password" class="form-control" placeholder="Confirm password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="Password" class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <select required asp-for="OrganizationType" class="form-control" asp-items="Html.GetEnumSelectList<OrganizationType>()">
          <option disabled selected>-- Choose Your Organization--</option>
          </select>
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="OrganizationType" class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <select required asp-for="Discipline" class="form-control" asp-items="Html.GetEnumSelectList<Discipline>()">
          <option disabled selected>--Choose Your Displine--</option>
          </select>
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="Discipline" class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <select required asp-for="Position" class="form-control" asp-items="Html.GetEnumSelectList<Position>()">
          <option disabled selected>--Choose Your Position--</option>
          </select>
          <div class="input-group-append">
            <div class="input-group-text">
              <span asp-validation-for="Position" class="fas fa-user"></span>
            </div>
          </div>
        </div>
        
        <div class="row justify-content-center">
          
          <!-- /.col -->
          <div class="col-6 ">
            <button type="submit"  class="btn btn-primary btn-block text">Register</button>
          </div>
          <!-- /.col -->
        </div>
      </form>

      <a asp-action="Login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>

@section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

























