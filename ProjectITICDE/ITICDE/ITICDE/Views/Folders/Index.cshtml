@model IEnumerable<ITICDE.Models.Folder>

@{
    ViewData["Title"] = "Index";
    var ProjId = (int)ViewBag.ProjId;
}

<h1>Folders</h1>

<p style="display:flex;justify-content:flex-end;">
 <a asp-action="Create" asp-route-ProjectId="@ProjId" class="btn btn-primary" style="margin:25px;"><i class="fas fa-folder" > </i> Create New</a> 
	
    @*<a asp-action="Create" asp-route-ProjectId="@ProjId">Create New</a>*@
</p>


<table class="table" style="text-align:center">
    <thead>
		
        <tr>
			<th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
        </tr>
    </thead>
    <tbody>
        
       
@foreach (var item in Model) 
    {

            if (item.HasParent == false && ProjId == item.ProjectId)
            {
                <tr>
					<td><i class="fas fa-folder"></i></td>
                    <td>
                        
                        <a asp-action="InnerDet" asp-route-Id = "@item.Id" >@item.Name</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                    <td>
                      <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm"> <i class="fas fa-pencil-alt"></i> Edit</a>  
                      <a  src="/open-iconic/svg/icon-name.svg" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="icon fas fa-info"></i>  Details</a> 
                      <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
    }
    </tbody>
</table>
